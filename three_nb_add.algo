ALGORITHM SENTENCE
VAR
   nbv,nbw,nbc:= INTEGER;
   sentc:= STRING[] ;

BEGIN
   nbc:=0;
   nbw:=1;
   nbv:=0;
   write("type the sentence")
   read(sentc)
   IF (sentc[nbc]=" ") THEN
   nbw:=nbw+1 ;
   END IF
    (sentc[nbc] in ["a","e","u","i","o","y"]) THEN
    nbv:= nbv +1 ;
    END_IF
    nbc := nbc+1 ;
    UNTIL (sentc[nbc]=".")
    write( "the number of characters is ",nbc+1 )
    write (" the number of words is ",nbw)
    write (" the vowel number is ",nbv)
END